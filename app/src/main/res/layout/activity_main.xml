<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginRight="@dimen/appside_padding"
        android:layout_marginLeft="@dimen/appside_padding"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="안전한 휴가"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_text">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/dev_btn"
                android:layout_width="@dimen/contentSzie"
                android:layout_height="@dimen/contentSzie"
                android:background="@drawable/main_dev"
                android:layout_gravity="center">
            </androidx.appcompat.widget.AppCompatImageButton>

        </LinearLayout>

    </FrameLayout>
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:background="@color/colorSub"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="12">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="@dimen/appside_padding"
            android:layout_marginRight="@dimen/appside_padding"
            android:layout_marginTop="@dimen/appside_padding"
            android:layout_marginBottom="@dimen/appside_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/appside_halfhalf_padding"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/colorSub"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:text="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#a2a2a2"
                        android:textStyle="bold"
                        android:text="방문자 수" />

                </LinearLayout>
                <TextView
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="#dddddd"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/appside_halfhalf_padding"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_signal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSub"
                        android:layout_gravity="center"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:text="0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#a2a2a2"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:text=" 해수부신호등"/>

                </LinearLayout>
                <TextView
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="#dddddd"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:layout_margin="@dimen/appside_halfhalf_padding"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_cctv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/colorSub"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:text="0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#a2a2a2"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:text=" 해수부CCTV"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="@dimen/appside_padding"
            android:layout_marginLeft="@dimen/appside_padding"
            android:layout_marginRight="@dimen/appside_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="9">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:scaleType="center"
                    app:srcCompat="@drawable/map">
                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                android:weightSum="9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="여행지 선택"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_weight="10"
                            android:layout_marginLeft="@dimen/appside_padding">
                        </TextView>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/search_btn"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/contentSzie"
                            app:srcCompat="@drawable/main_search_full"
                            android:layout_weight="2">
                        </androidx.appcompat.widget.AppCompatImageView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:weightSum="10">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/incheon_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/incheon"
                        android:textStyle="bold"
                        android:background="@color/incheon"
                        android:layout_marginTop="@dimen/buttonside_margin"
                        android:layout_marginBottom="@dimen/buttonside_margin"
                        android:layout_weight="1">
                    </androidx.appcompat.widget.AppCompatButton>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/gangwon_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gangwon"
                        android:textStyle="bold"
                        android:background="@color/gangwon"
                        android:layout_marginTop="@dimen/buttonside_margin"
                        android:layout_marginBottom="@dimen/buttonside_margin"
                        android:layout_weight="1">
                    </androidx.appcompat.widget.AppCompatButton>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/kunggi_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kunggi"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@color/kunggi"
                        android:layout_marginTop="@dimen/buttonside_margin"
                        android:layout_marginBottom="@dimen/buttonside_margin"
                        android:layout_weight="1">
                    </androidx.appcompat.widget.AppCompatButton>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:weightSum="9">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/choongbook_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/choongbook"
                        android:textStyle="bold"
                        android:visibility="invisible"
                        android:background="@color/choongbook"
                        android:layout_marginTop="@dimen/buttonside_margin"
                        android:layout_marginBottom="@dimen/buttonside_margin"
                        android:layout_weight="1">

                    </androidx.appcompat.widget.AppCompatButton>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:weightSum="11">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/choongnam_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/choongnam"
                        android:textStyle="bold"
                        android:background="@color/choongnam"
                        android:layout_marginTop="@dimen/buttonside_margin"
                        android:layout_marginBottom="@dimen/buttonside_margin"
                        android:layout_weight="1">
                    </androidx.appcompat.widget.AppCompatButton>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/kungbook_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kungbook"
                        android:textStyle="bold"
                        android:background="@color/kungbook"
                        android:layout_marginTop="@dimen/buttonside_margin"
                        android:layout_marginBottom="@dimen/buttonside_margin"
                        android:layout_weight="1">
                    </androidx.appcompat.widget.AppCompatButton>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/junbook_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/junbook"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@color/junbook"
                        android:layout_marginTop="@dimen/buttonside_margin"
                        android:layout_marginBottom="@dimen/buttonside_margin"
                        android:layout_weight="1">
                    </androidx.appcompat.widget.AppCompatButton>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/pohang_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ulsan"
                        android:textStyle="bold"
                        android:background="@color/pohang"
                        android:layout_marginTop="@dimen/buttonside_margin"
                        android:layout_marginBottom="@dimen/buttonside_margin"
                        android:layout_weight="1">
                    </androidx.appcompat.widget.AppCompatButton>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/kungnam_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kungnam"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@color/kungnam"
                        android:layout_marginTop="@dimen/buttonside_margin"
                        android:layout_marginBottom="@dimen/buttonside_margin"
                        android:layout_weight="1">
                    </androidx.appcompat.widget.AppCompatButton>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/busan_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/busan"
                        android:textStyle="bold"
                        android:background="@color/busan"
                        android:layout_marginTop="@dimen/buttonside_margin"
                        android:layout_marginBottom="@dimen/buttonside_margin"
                        android:layout_weight="1">
                    </androidx.appcompat.widget.AppCompatButton>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:weightSum="10">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/junnam_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/junnam"
                        android:textStyle="bold"
                        android:background="@color/junnam"
                        android:layout_marginTop="@dimen/buttonside_margin"
                        android:layout_marginBottom="@dimen/buttonside_margin"
                        android:layout_weight="1">
                    </androidx.appcompat.widget.AppCompatButton>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:background="@android:color/transparent"
                    android:layout_weight="1">

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>



</LinearLayout>

