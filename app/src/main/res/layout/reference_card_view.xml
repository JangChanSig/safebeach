<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:foreground= "?attr/selectableItemBackground"
    app:cardElevation="5dp"
    android:orientation="horizontal"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/ref_card_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/appside_padding"
                android:paddingRight="@dimen/appside_padding"
                android:layout_marginLeft="@dimen/appside_padding"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:background="@drawable/rounded_stroke"
                android:text="연안 포털"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/appside_padding"
                android:gravity="center_vertical"
                android:textColor="@color/colorMain"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/ref_card_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="http://coast.mof.go.kr/main.do"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorMain"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/ref_card_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="데이터 종류"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorMain"
                android:textSize="12sp" />

        </LinearLayout>
        <ImageView
            android:id="@+id/ref_card_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="4"
            android:src="@drawable/sample"
            android:scaleType="fitXY" />
    </LinearLayout>
</androidx.cardview.widget.CardView>